<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="410dp"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:padding="0dp">

    <ProgressBar
        android:id="@+id/pbFactAverage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="154dp"
        android:layout_height="160dp"
        android:indeterminate="false"
        android:max="100"
        android:min="1"
        android:progress="75"
        android:progressDrawable="@drawable/progress_circle"
        app:layout_constraintBottom_toBottomOf="@+id/favoriteView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/favoriteView" />

    <ProgressBar
        android:id="@+id/pbBiasAverage"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="330dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="288dp"
        android:indeterminate="false"
        android:max="100"
        android:min="1"
        android:progress="75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivNewspaper"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pbBiasAverage"
        app:srcCompat="@drawable/newspaper_icon" />

    <TextView
        android:id="@+id/tvBiasTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/lato"
        android:text="AVERAGE BIAS"
        app:layout_constraintBottom_toTopOf="@+id/tvModerate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato"
        android:text="User Sharing Statistics"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="AVERAGE\nTRUTH"
        app:layout_constraintBottom_toBottomOf="@+id/tvArticleTitle"
        app:layout_constraintEnd_toEndOf="@+id/pbFactAverage"
        app:layout_constraintStart_toStartOf="@+id/pbFactAverage"
        app:layout_constraintTop_toBottomOf="@+id/pbBiasAverage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvArticleTitleCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="#"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvArticleTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvArticleTitle"
        app:layout_constraintStart_toStartOf="@+id/tvArticleTitle"
        app:layout_constraintTop_toBottomOf="@+id/pbBiasAverage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/lato"
        android:text="ARTICLES"
        app:layout_constraintBottom_toTopOf="@+id/ivNewspaper"
        app:layout_constraintEnd_toEndOf="@+id/ivNewspaper"
        app:layout_constraintStart_toStartOf="@+id/ivNewspaper" />

    <TextView
        android:id="@+id/tvFavoritesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:text="FAVORITE"
        app:layout_constraintBottom_toBottomOf="@+id/tvArticleTitle"
        app:layout_constraintEnd_toEndOf="@+id/favoriteView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/favoriteView"
        app:layout_constraintTop_toTopOf="@+id/tvArticleTitleCreate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvLiberal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:text="Liberal"
        android:textColor="@color/colorLightText"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/pbBiasAverage"
        app:layout_constraintStart_toStartOf="@+id/pbBiasAverage" />

    <TextView
        android:id="@+id/tvSLiberal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="S. Liberal"
        android:textColor="@color/colorLightText"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/pbBiasAverage"
        app:layout_constraintStart_toEndOf="@+id/tvLiberal"
        app:layout_constraintTop_toBottomOf="@+id/tvBiasTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvModerate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Moderate"
        android:textColor="@color/colorLightText"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/pbBiasAverage"
        app:layout_constraintStart_toEndOf="@+id/tvSLiberal" />

    <TextView
        android:id="@+id/tvSConservative"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="S. Conserv."
        android:textColor="@color/colorLightText"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvModerate"
        app:layout_constraintStart_toEndOf="@+id/tvModerate" />

    <TextView
        android:id="@+id/tvConservative"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Conserv."
        android:textColor="@color/colorLightText"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/pbBiasAverage"
        app:layout_constraintEnd_toEndOf="@+id/pbBiasAverage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvSConservative" />

    <TextView
        android:id="@+id/tvSourceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato"
        android:text="Source"
        android:textAllCaps="true"
        android:textColor="@color/colorBaseText"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/favoriteView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/favoriteView"
        app:layout_constraintTop_toTopOf="@+id/favoriteView" />

    <TextView
        android:id="@+id/tvTagTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato"
        android:text="TOPIC"
        android:textAllCaps="true"
        android:textColor="@color/colorBaseText"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/favoriteView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/favoriteView"
        app:layout_constraintTop_toBottomOf="@+id/tvSourceFavorite" />

    <TextView
        android:id="@+id/tvSourceFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="Source"
        android:textColor="@color/colorLightText"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/favoriteView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvSourceTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSourceTitle" />

    <TextView
        android:id="@+id/tvTagFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="Source"
        android:textColor="@color/colorLightText"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/favoriteView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvSourceTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTagTitle" />

    <TextView
        android:id="@+id/tvDisclaimer"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="User statistics are calculated from the data of the articles you have previously shared | Your social bubble is calculated from the average biases of your friends"
        android:textColor="@color/colorLightText"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbFactAverage"
        app:layout_constraintVertical_bias="1.0" />

    <view
        android:id="@+id/favoriteView"
        class="androidx.constraintlayout.widget.ConstraintLayout"
        id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/ivNewspaper"
        app:layout_constraintEnd_toStartOf="@+id/ivNewspaper"
        app:layout_constraintTop_toTopOf="@+id/ivNewspaper"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvFactAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="%"
        android:textColor="#5FDAB6"
        app:layout_constraintBottom_toBottomOf="@+id/pbFactAverage"
        app:layout_constraintEnd_toEndOf="@+id/pbFactAverage"
        app:layout_constraintStart_toStartOf="@+id/pbFactAverage"
        app:layout_constraintTop_toTopOf="@+id/pbFactAverage" />

    <TextView
        android:id="@+id/tvSocialDisclaimer"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="In order to promote healthy and informed discussion, it is important to be aware of the potential biases on your feed."
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favoriteView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewSocialBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDisclaimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSocialDisclaimer"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvSocialBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/tvSocialBubbleTitle"
            android:text="TextView"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/viewSocialBubble"
            app:layout_constraintStart_toEndOf="@+id/tvSocialBubbleTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSocialBubbleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="SOCIAL BUBBLE :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>