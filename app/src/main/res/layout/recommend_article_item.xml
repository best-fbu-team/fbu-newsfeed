<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="45dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewArticle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:elevation="1dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivArticleImageRecommend"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:foreground="?selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/tvArticleTitleRecommend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053"
            app:srcCompat="@android:color/black" />

        <TextView
            android:id="@+id/tvArticleTitleRecommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/merriweather_light"
            android:maxLines="3"
            android:text="Title"
            android:textAppearance="@style/HeadlineTextAppearance"
            android:textColor="@color/colorHeadlineText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:foreground="?selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivArticleImageRecommend" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>