<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="Dialog" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="HeadlineTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHeadlineText</item>
    </style>
    
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
