<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Dialog" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="HeadlineTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHeadlineText</item>
    </style>

</resources>
